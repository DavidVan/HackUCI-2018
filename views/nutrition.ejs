    <script>

        function writeUserData(userId, name, email) {
            firebase.database().ref('users/' + userId).set({
                username: name,
                email: email
            });
        }
        function formatDate(date) {
            var monthNames = [
            "January", "February", "March",
            "April", "May", "June", "July",
            "August", "September", "October",
            "November", "December"
          ];

          var day = date.getDate();
          var monthIndex = date.getMonth();
          var year = date.getFullYear();

          return day + ' ' + monthNames[monthIndex] + ' ' + year;
        }

        let ref = firebase.database().ref();
        ref.on("value", function(snapshot) {
            console.log(snapshot.val());

        }, function(error) {
            console.log("Error: " + error.code);
        });


        function addToNutrition(userID, mealName, calIntake, type) {
            firebase.database().ref('users/' + userID).push({
                    "type": type,
                    'name': mealName, 'calories': calIntake, "date": new Date().getTime()

            });
            if(type === "Breakfast") {
                document.getElementById("breakfastName").value = "";
                document.getElementById("breakfastIntake").value = "";
            }
            else if(type === "Lunch") {
                document.getElementById("lunchName").value = "";
                document.getElementById("lunchIntake").value = "";
            }
            else {
                document.getElementById("dinnerName").value = "";
                document.getElementById("dinnerIntake").value = "";
            }
        }
        function populateList() {
            
        }

        let breakfastAddBtn = document.getElementById("breakfast-button");
        breakfastAddBtn.addEventListener('click', () => {
            console.log(firebase.auth().currentUser.uid + " " + document.getElementById("breakfastName").value + " " + document.getElementById("breakfastIntake").value + " ");
            addToNutrition(firebase.auth().currentUser.uid, document.getElementById("breakfastName").value, document.getElementById("breakfastIntake").value, "Breakfast");
        });
        let lunchAddBtn = document.getElementById("lunch-button");
        lunchAddBtn.addEventListener('click', () => {
            addToNutrition(firebase.auth().currentUser.uid, document.getElementById("lunchName").value, document.getElementById("lunchIntake").value, "Lunch");
        });
        let dinnerAddBtn = document.getElementById("dinner-button");
        dinnerAddBtn.addEventListener('click', () => {
            addToNutrition(firebase.auth().currentUser.uid, document.getElementById("dinnerName").value, document.getElementById("dinnerIntake").value, "Dinner");
